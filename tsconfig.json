{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "react-resource-router": ["src"],
      "react-resource-router/resources": ["src/resources"]
    },
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": ["./node_modules/@types", "types"],
  },
  "include": ["examples/**/*", "src/**/*", "codemods/**/*"],
  "exclude": ["**/*.js.flow"]
}
